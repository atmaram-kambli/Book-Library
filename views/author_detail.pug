extends layout 

block content 

    h1 Author: #{author.fullName}
    p #{author.dataOfBirth} - #{author.dateOfDeath}

    div(style='margin-left:20px;margin-top:20px')

        h2(style='font-size: 1.5rem;') Books
        if books.length
            dl 
                each book in books 
                    dt 
                        a(href=book.url) #{book.title}
                    dd #{book.summary}
        else 
            p This author has no books